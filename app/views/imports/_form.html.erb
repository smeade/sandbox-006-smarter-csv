<%= form_for(@import, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @import.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@import.errors.count, "error") %> prohibited this import from being saved:</h4>

      <ul>
      <% @import.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :source_filename, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :source_filename, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :notes, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :count_records, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :count_records, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :live, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :live, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
